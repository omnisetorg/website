---

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">Linux is only the beginning.</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        OmniSet lets you do so much more.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {features.map((feature) => (
        <div class="p-6 rounded-2xl bg-gray-50 hover:bg-gray-100 transition-colors">
          <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mb-4">
            <svg width="24" height="24" fill="none" stroke="#4F46E5" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
              <path d={iconPaths[feature.icon]} stroke-linecap="round" stroke-linejoin="round"/>
              {feature.icon === 'cog' && (
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke-linecap="round" stroke-linejoin="round"/>
              )}
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2 text-gray-900">{feature.title}</h3>
          <p class="text-gray-600 text-sm leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
