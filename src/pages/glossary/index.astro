---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

const glossaryItems = await getCollection('glossary');
const sortedItems = glossaryItems.sort((a, b) => a.data.term.localeCompare(b.data.term));

// Group by first letter
const grouped = sortedItems.reduce((acc, item) => {
  const letter = item.data.term[0].toUpperCase();
  if (!acc[letter]) acc[letter] = [];
  acc[letter].push(item);
  return acc;
}, {} as Record<string, typeof sortedItems>);
---

<BaseLayout
  title="Linux Glossary | OmniSet"
  description="Learn Linux terminology. A comprehensive glossary of Linux terms, commands, and concepts for beginners and experts."
>
  <section class="py-20 bg-gradient-hero text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Linux Glossary</h1>
        <p class="text-xl text-white/80">
          Learn the terminology used in the Linux ecosystem.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <!-- Letter navigation -->
        <div class="flex flex-wrap gap-2 mb-12 justify-center">
          {Object.keys(grouped).sort().map((letter) => (
            <a href={`#${letter}`}
               class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-100 hover:bg-indigo-100 text-gray-700 hover:text-indigo-600 font-semibold transition-colors">
              {letter}
            </a>
          ))}
        </div>

        <!-- Terms grouped by letter -->
        <div class="space-y-12">
          {Object.entries(grouped).sort(([a], [b]) => a.localeCompare(b)).map(([letter, items]) => (
            <div id={letter}>
              <h2 class="text-3xl font-bold text-indigo-600 mb-6 pb-2 border-b border-gray-200">{letter}</h2>
              <div class="space-y-4">
                {items.map((item) => (
                  <a href={`/glossary/${item.data.slug}/`}
                     class="block p-4 rounded-xl hover:bg-gray-50 transition-colors group">
                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors">
                      {item.data.term}
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">{item.data.shortDefinition}</p>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
