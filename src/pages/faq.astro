---
import BaseLayout from '@layouts/BaseLayout.astro';
import JsonLd from '@components/seo/JsonLd.astro';
import faqData from '@content/faq.json';

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqData.items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<BaseLayout
  title="Frequently Asked Questions | OmniSet"
  description="Common questions about OmniSet - the easiest way to set up your Linux environment. Learn about supported distributions, security, customization, and more."
>
  <Fragment slot="head">
    <JsonLd schema={faqSchema} />
  </Fragment>

  <section class="py-20 bg-gradient-hero text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Frequently Asked Questions</h1>
        <p class="text-xl text-white/80">
          Everything you need to know about OmniSet and getting started with Linux.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <div class="space-y-8">
          {faqData.items.map((item, index) => (
            <div class="border-b border-gray-200 pb-8 last:border-0">
              <h2 class="text-xl font-semibold text-gray-900 mb-4">
                {item.question}
              </h2>
              <p class="text-gray-600 leading-relaxed">
                {item.answer}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Still have questions?</h2>
        <p class="text-gray-600 mb-8">
          Check out the documentation or join our community discussions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="https://github.com/omnisetorg/install#readme" target="_blank"
            class="px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-all hover:-translate-y-0.5">
            Read the Docs
          </a>
          <a href="https://github.com/omnisetorg/install/discussions" target="_blank"
            class="px-6 py-3 border-2 border-gray-900 text-gray-900 rounded-xl hover:bg-gray-900 hover:text-white transition-all hover:-translate-y-0.5">
            Join Discussions
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
