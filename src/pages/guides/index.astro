---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

const guides = await getCollection('guides');

const difficultyColors: Record<string, string> = {
  beginner: 'bg-green-100 text-green-700',
  intermediate: 'bg-yellow-100 text-yellow-700',
  advanced: 'bg-red-100 text-red-700'
};
---

<BaseLayout
  title="Linux Guides & Tutorials | OmniSet"
  description="Step-by-step Linux guides and tutorials. Learn how to install software, configure your system, and master the command line."
>
  <section class="py-20 bg-gradient-hero text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Guides & Tutorials</h1>
        <p class="text-xl text-white/80">
          Step-by-step tutorials to help you get the most out of Linux.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {guides.map((guide) => (
          <a href={`/guides/${guide.data.slug}/`}
             class="p-6 rounded-2xl border border-gray-200 hover:border-indigo-300 hover:shadow-lg transition-all group">
            <div class="flex items-center gap-3 mb-4">
              <span class={`text-xs px-2 py-1 rounded-full font-medium ${difficultyColors[guide.data.difficulty]}`}>
                {guide.data.difficulty}
              </span>
              <span class="text-xs text-gray-500">{guide.data.timeToComplete}</span>
            </div>
            <h2 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors mb-2">
              {guide.data.title}
            </h2>
            <p class="text-gray-600 text-sm">{guide.data.description}</p>
            <div class="mt-4 text-sm text-indigo-600">
              {guide.data.steps.length} steps â†’
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
