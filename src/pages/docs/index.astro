---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

const allDocs = await getCollection('docs');
const docs = allDocs.sort((a, b) => a.data.order - b.data.order);

// Group docs by category
const categories = docs.reduce((acc, doc) => {
  const cat = doc.data.category;
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(doc.data);
  return acc;
}, {} as Record<string, typeof docs[number]['data'][]>);

const categoryOrder = ['Introduction', 'Configuration', 'Support', 'Community'];

const iconPaths: Record<string, string> = {
  rocket: 'M13 10V3L4 14h7v7l9-11h-7z',
  users: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z',
  settings: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z',
  trash: 'M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16',
  help: 'M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  heart: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  grid: 'M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z',
  terminal: 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
};
---

<BaseLayout
  title="Documentation | OmniSet"
  description="Complete documentation for OmniSet. Learn how to install, configure, and customize your Linux environment."
>
  <section class="py-20 bg-gradient-hero text-white">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Documentation</h1>
        <p class="text-xl text-white/80">
          Everything you need to know about installing, configuring, and using OmniSet.
        </p>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        {categoryOrder.map((category) => categories[category] && (
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-200">
              {category}
            </h2>
            <div class="grid md:grid-cols-2 gap-4">
              {categories[category].map((doc) => (
                <a href={`/docs/${doc.slug}/`}
                   class="flex gap-4 p-4 rounded-xl border border-gray-200 hover:border-indigo-300 hover:bg-indigo-50/50 transition-all group">
                  <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-indigo-200 transition-colors">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[doc.icon || 'help']}></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors">
                      {doc.title}
                    </h3>
                    <p class="text-sm text-gray-600 mt-1">
                      {doc.description}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Can't find what you need?</h2>
        <p class="text-gray-600 mb-8">
          Check out our FAQ or ask the community for help.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/faq/" class="px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-all hover:-translate-y-0.5">
            View FAQ
          </a>
          <a href="https://github.com/omnisetorg/install/discussions" target="_blank"
             class="px-6 py-3 border-2 border-gray-900 text-gray-900 rounded-xl hover:bg-gray-900 hover:text-white transition-all hover:-translate-y-0.5">
            Ask the Community
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
